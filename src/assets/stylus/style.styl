@import 'rupture'

$tabletWidth = 992px //  same as semantic-ui

i + span
  margin-left 0.5em

header
  .title.item
    font-size 2em

main.container
  max-width 100%
  padding 1em
  margin-top 50px


/* admin */

#admin
  #admin_menu
    +below($tabletWidth)
      display none
  #admin_content
    +below($tabletWidth)
      width 100% !important
  header
    a.admin.menu.item
      display none
      cursor pointer
      +below($tabletWidth)
        display inline-block

/* login */

#login
  .signup
    display block
    margin-top 3em