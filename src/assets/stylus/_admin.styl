main#admin_container
  padding-top 1em
  
  #admin_content

    h2
      margin-top 0
      margin-bottom 0.1em
      font-size 2rem

    input[type=submit]
      margin-top 1em

    
    // /routes
    .page-routes
      .collection-item
        padding 0
        
        a
          display block
          padding 0.9em

          span.method
            display inline-block
            min-width 5%
            margin-right 1em
            
          span.url
            display inline-block
            
    .page-route
      .result
        margin-top 2em
        border-top 1px solid #efefef
        pre
          margin-top 1em
          max-height 400px
        .meta
          .label
            margin-right 0.5em
            
    // /models
    .page-model
      .model-filters
        .filter
          display inline-block
          vertical-align top
          padding 0.5em
        .action
          text-align center
          padding 0.5em
      tr
        cursor pointer
          
        
